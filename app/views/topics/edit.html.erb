<h1> Edit Topic </h1>

<div class="row"> 
	<div class="col-md-4">
		<p> Please add only Topics that content needs to be generated for. </p>
	</div>
	<div class="col-md-8">
		<%= form_for @topic do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name here" %>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, rows: 20, class: 'form-control', placeholder: "Enter topic description here" %>
			</div>
			<div class="form-group">i
				<%= f.label :public, class: 'checkbox' do %>
					<%= f.check_box :public %>Public Topic
				<% end %>
			</div>
			<%= f.submit "Save", class: 'btn btn-success' %>
		<% end %> 
	</div>
</div>
